{
    "version": 2,
    "builds": [
      {
        "src": "backend/src/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/notes-app/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/notes-app/dist"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/src/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/notes-app/dist/index.html"
      }
    ],
    "headers": [
      {
        "source": "/api/v1/(.*)", 
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "http://localhost:5173,https://notes-app-ruby-omega.vercel.app" 
          },
          {
            "key": "Access-Control-Allow-Credentials",
            "value": "true" 
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS" 
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization" 
          }
        ]
      }
    ]
  }
  